<Window x:Class="overlayclock.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:overlayclock.ViewModels"
        mc:Ignorable="d"
        Title="OverlayWindow" Height="120" Width="220"
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent" 
        Topmost="True" 
        ShowInTaskbar="False"
        Loaded="Window_Loaded">
    
    <Grid>
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Right" Margin="20">
            <TextBlock Text="{Binding RemainingText}" 
                       Foreground="White" 
                       FontSize="40" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Right"
                       FontFamily="Segoe UI, Arial">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="Black" Opacity="0.8"/>
                </TextBlock.Effect>
            </TextBlock>
            <TextBlock Text="{Binding PhaseText}" 
                       Foreground="White" 
                       FontSize="18" 
                       FontWeight="SemiBold" 
                       HorizontalAlignment="Right"
                       Margin="0,-5,0,0"
                       FontFamily="Segoe UI, Arial">
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="5" ShadowDepth="1" Color="Black" Opacity="0.8"/>
                </TextBlock.Effect>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
